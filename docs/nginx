# Default server configuration
#
server {


	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name api-renovadmin.kysoe.com;

	root /var/www/html/api_renovadmin;
	client_max_body_size 10M;

       index index.html;

	location /api {
		proxy_pass http://127.0.0.1:4999;
	}

	location /static {
		root /var/www/html/api_renovadmin/app;
	}

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}


    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api-renovadmin.kysoe.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api-renovadmin.kysoe.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = api-renovadmin.kysoe.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80;
	listen [::]:80;

	server_name api-renovadmin.kysoe.com;
    return 404; # managed by Certbot


}
